<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight"
        android:background="@android:color/white"
        app:cardCornerRadius="@dimen/eight"
        app:cardElevation="@dimen/two"
        app:contentPadding="@dimen/four">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_fifty">

            <ImageView
                android:id="@+id/iv_restaurant_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:scaleType="centerCrop"
                android:src="@drawable/restaurant"
                android:contentDescription="@string/res_img_con_des"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen"
                android:layout_marginStart="@dimen/twenty_four"
                android:layout_marginTop="@dimen/sixteen"
                android:fontFamily="sans-serif"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/text_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_restaurant_image"
                tools:text="CUISINE NAME" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>