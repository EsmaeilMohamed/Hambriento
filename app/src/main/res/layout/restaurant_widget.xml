<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_res_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eighty_seven"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_medium"
            tools:text="Restaurant Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_restaurant"
            android:layout_width="@dimen/hundred"
            android:layout_height="@dimen/hundred"
            android:layout_marginStart="@dimen/five"
            android:contentDescription="@string/res_img_con_des"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/restaurant" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_city_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:text="@string/city"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_medium"
                    tools:text="Restaurant City" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixteen"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/five"
                    android:text="@string/rating"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_medium" />


                <TextView
                    android:id="@+id/tv_res_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/eighty_seven"
                    android:layout_marginStart="@dimen/five"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/holo_green_light"
                    tools:text="Very Good" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>