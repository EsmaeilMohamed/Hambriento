<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight"
        android:background="@android:color/white"
        app:cardCornerRadius="@dimen/eight"
        app:cardElevation="@dimen/two"
        app:contentPadding="@dimen/four">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_fifty">

            <ImageView
                android:id="@+id/iv_cuisine_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:scaleType="centerCrop"
                android:contentDescription="@string/cuisine_img"
                android:src="@drawable/restaurant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_cuisine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sixteen"
                android:layout_marginStart="@dimen/twenty_four"
                android:layout_marginTop="@dimen/sixteen"
                android:fontFamily="sans-serif"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="@dimen/text_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_cuisine_image"
                tools:text="CUISINE NAME" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>